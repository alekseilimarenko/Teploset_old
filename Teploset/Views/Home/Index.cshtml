<!--posts start-->
<section id="post" class="bottom-border-shadow">
    <div class="container bottom-border">
        <div class="row padding-vert-40">
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div>
                        <p class="margin-bottom-10 panel-head">
                            <a href="@Url.Action("Index", "Post", new {id = lang})">
                                @{
                                    var pt = lang == "ua" ? "об'яви" : "объявления";
                                }
                                @pt
                            </a>
                        </p>
                        <hr />
                    </div>
                    <div class="panel-body">
                        <ul class="posts-list">
                            @if (postsList != null)
                            {
                                foreach (var post in postsList)
                                {
                                    <li>
                                        <div class="recent-post">
                                            <img class="pull-left" src="~/Content/images/newsimg/warning.png" alt="images" />
                                            <a href="@Url.Action("Details", "Post", new {postId = post.PostId, langType = lang})" class="posts-title">
                                                @{
                                                    var tt = lang == "ua" ? "Аварійне відключення" : "Аварийное отключение";
                                                }
                                                @tt
                                            </a>
                                            <br>
                                            <span class="posts-content">@post.PostTitle</span>
                                            <br>
                                            <span class="post-date">@post.DateTimeCreate.ToShortDateString()</span>
                                        </div>
                                    </li>
                                }
                            } 
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div>
                        <p class="margin-bottom-10 panel-head">
                            <a href="@Url.Action("Index", "News", new {id = lang})">
                                @{
                                    var ns = lang == "ua" ? "новини" : "новости";
                                }
                                @ns
                            </a>
                        </p>
                        <hr />
                    </div>
                    <div class="panel-body">
                        <ul class="posts-list margin-top-10">
                            @if (newsList != null)
                            {
                                foreach (var news in newsList)
                                {
                                    <li>
                                        <div class="recent-post">
                                            <img class="pull-left" width="64" height="48" src="~/Content/images/newsimg/energy.jpg" alt="images"/>
                                            <a href="@Url.Action("Details", "News", new {id = news.NewsId, lang})" class="posts-title">@news.NewsTitle</a>
                                            <br>
                                            <span class="post-date">@news.DateTimeCreate.ToShortDateString()</span>
                                        </div>
                                    </li>
                                    <br />
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div>
                        <p class="margin-bottom-10 panel-head">
                            <a href="@Url.Action("VacancyList", "Home", new {id = lang})">
                                @{
                                    var vc = lang == "ua" ? "вакансії" : "вакансии";
                                }
                                @vc
                            </a>
                        </p>
                        <hr />
                    </div>
                    <div class="panel-body text-left">
                        <ul class="list-unstyled ">
                            @if (vacancies != null)
                            {
                                for (int i = 0; i <= 3; i++)
                                {
                                    <li>
                                        <p><i class="fa fa-user color-primary"></i>&nbsp;&nbsp;&nbsp;@vacancies[i].VacancyName</p>
                                    </li>
                                }
                            }
                        </ul>
                        <br/>
                        @{
                            var more = lang == "ua" ? "Детальніше" : "Подробнее";
                        }
                        <a href="@Url.Action("VacancyList", "Home", new {id = lang})">@more &raquo;</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</section>